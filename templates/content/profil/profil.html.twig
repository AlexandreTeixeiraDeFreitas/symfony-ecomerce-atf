{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Profil</h1>

    <div class=" w3-container w3-margin-top" style="width:50%; display: block; margin-left: auto; margin-right: auto;">
        <div class="w3-card-4">

        <div class="w3-container" >
        {# {{dump(message)}} #}
        {% if message is defined %}
            <p style="color: red;">{{message}}</p>
        {% endif %}
        <p><strong>prenon: </strong>{{ app.user.firstname }}</p>
        <p><strong>nom: </strong>{{ app.user.lastname }}</p>
        <p><strong>Email: </strong>{{ app.user.email }}</p>
        <p><strong>Tel: </strong>{{ app.user.phonenumber }}</p>
        <p><strong>Pays: </strong>{{ app.user.country }}</p>
        <p><strong>address: </strong>{{ app.user.address }}</p>
        <p><strong>Code postal: </strong>{{ app.user.postalcode }}</p>
        </div>

        <footer class="w3-container w3-teal">
            <a class="w3-button" href="{{ path('app_profil_edit', {'id': app.user.id}) }}">Modifier mon profil</a>
            <a class="w3-button" href="{{ path('app_profil_editpass', {'id': app.user.id}) }}">Modifier mon mot de pass</a>
        </footer>

        </div>
    </div>

