{% extends 'base.html.twig' %}

{% block title %}All user{% endblock %}
{% block body %}
<table class="table w3-table-all w3-hoverable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.firstname }}</td>
                <td>
                    {# <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a> #}
                    <a class="w3-button" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                    <form class="w3-button" method="post" action="{{ path('app_user_delete', {'id': app.user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ app.user.id) }}">
                        <button class="btn w3-button">Delete</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}